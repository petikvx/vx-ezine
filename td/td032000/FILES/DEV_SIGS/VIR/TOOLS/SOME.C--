// Небольшая прога выдирающая сигнатуры которые подходят под некоторое правило.

?define	siglim	10


byte	storage[16];
word	signum = 0;

main()
word	outta,inna;
{
 inna  = FOPEN(0,,,"sig.out");
 outta = FCREATE(,,0,"done.sig");
 while ((FREAD(,inna,16,#storage) != 0)
 /* && (signum < siglim) */)
 {
  BX = #storage+1;
  BX = DSWORD[BX];
  SI = #storage+9;
  DX = DSWORD[SI];
  if ((storage[3] > 12) && 
		(storage[3+8] > 12) && 
			(BX == 0) && 
				(storage[0] == 0xE8) &&
					(DX < 0x100) &&
						(DX > 0x10))
	{
	FWRITE(,outta,16,#storage);
//	signum++;
	}
 }
 FCLOSE(,inna);
 FCLOSE(,outta);
}