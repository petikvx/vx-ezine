; R=reservado,A=atributos,D=data,H=hora,T=tamanho,N=nome,E=extensao
                                ;
fim:                            ;
mov ax,4C00h                    ; Termina Execucao se for a primeira
int 21h                         ; esta parte nao eh copiada p/ o host
                                ;
ends code                       ;
end inicio                      ;
