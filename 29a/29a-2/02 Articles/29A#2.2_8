; UNPACK decompression engine, by Vecna/29A
;   Entry:
;     CX = number of bytes to expand
;     SI = buffer to expand
;     DI = buffer for expanded code
;   Exit:
;     CX = size of expanded code
;     DX = buffer of expanded code

public UNPACK
UNPACK proc
       mov dx, di
nexttat:
       lodsb
       or al, al
       jnz nextbit
       sub cx, 2
       push cx
       lodsw
       mov cx, ax
       xor ax, ax
       rep stosb
       pop cx
       loop nexttat
       jcxz quitta
nextbit:
       stosb
       loop nexttat
quitta:
       mov cx, di
       sub cx, dx
       ret
endp   UNPACK
