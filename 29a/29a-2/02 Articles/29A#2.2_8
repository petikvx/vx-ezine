; PACK compression engine, by Vecna/29A
;   Entry:
;     CX = number of bytes to compress
;     SI = offset of code to compress
;     DI = buffer to put compressed code in
;   Exit:
;     CX = number of bytes to save
;     DX = buffer to save

public PACK
PACK   proc
       mov dx, di
       xor bx, bx
nextta:
       lodsb
       or al, al
       jnz nextbyte
       inc bx
       loop nextta
nextbyte:
       or bx, bx
       jz nada
       push ax
       mov al, 0
       stosb
       mov ax, bx
       stosw
       xor bx, bx
       pop ax
       jcxz quit
nada:
       stosb
       loop nextta
quit:
       mov cx, di
       sub cx, dx
       ret
endp   PACK

