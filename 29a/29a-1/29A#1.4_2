MASKA       MACRO regis1:REQ,  mask2:REQ ;MASKA al, 001xx110
                        ;and   al, 00?11??0
                        ;or    al, 00100110
        local x,  tmp_mask
        x=1
        tmp_mask = 0
        IRPC  sb, mask2
            tmp_mask = tmp_mask*2+sb
        ENDM
        and regis1, tmp_mask

        x=0
        tmp_mask = 0
        IRPC  sb, mask2
            tmp_mask = tmp_mask*2+sb
        ENDM
        IF tmp_mask NE 0
            or  regis1, tmp_mask
        ENDIF
ENDM
