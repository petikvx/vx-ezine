pblabel choose_fake_mov  ;al=C0(add), C8(or), D0(adc), F0(xor)
    call     RND_GET_BYTE
    MASKA    al, 110xx000         ;al=C0(add), C8(or), D0(adc)
    cmp      al, 0D3h              ;no al=D8(sbb)
    DOIF A
        sub      al, 0D8h-0F0h      ;al := F0(xor)
