ENDIF
    DONE

    test    [engdata.zmeflags], MASK EN_USE_JMPS
    DOIF Z
        sto_byte opRETN
    DONE

    call    encode_jmp_near
    mov     ax, [engdata.targetptr]
    add     ax, [engdata.jmp_after_decrypt]
    mov     bx, [engdata.nJMP_patch]
